{% extends 'base.html.twig' %}

{% block title %}
{{beer.name}} - Digital Beer Wall
{% endblock %}

{% block head %}
<style type="text/css">
  .brick img {
    max-width: 45vh;
  }
</style>
{% endblock %}

{% block body %}

<div class="container">
  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col" align="center">
          <img src={{ path('app_admin_deleted_beer_image', {'id' : beer.id}) }} class="img-responsive">
        </div>

        <div class="col">
          <table class="table table-user-information">
            <tbody>
              <tr>
                <td>Name:</td>
                <td>{{ beer.name }}</td>
              </tr>

              <tr>
                <td>Country:</td>
                <td>{{ beer.countryname }}</td>
              </tr>

              <tr>
                <td>Signature:</td>
                <td>
                  {% if beer.issignature %}
                  <i class="bi bi-check-lg"></i>
                  {% else %}
                  <i class="bi bi-x-lg"></i>
                  {% endif %}
                </td>
              </tr>

              <tr>
                <td>ABV:</td>
                <td>{{beer.abv}}%</td>
              </tr>

              <tr>
                <td>Added by:</td>
                <td><a href="{{ path('app_show_user', {'id' : beer.user.id}) }}">{{beer.user.username}}</a></td>
              </tr>

              <tr>
                <td>Date Added:</td>
                <td>{{ beer.dateadded.format("d M Y") }}</td>
              </tr>

              {% if beer.datemodified %}
              <tr>
                <td>Last Modified:</td>
                <td>{{ beer.datemodified.format("d M Y") }}</td>
              </tr>
              {% endif %}

              {% if beer.modifiedby %}
              <tr>
                <td>Last Modified by:</td>
                <td>{{ beer.modifiedby.username }}</td>
              </tr>
              {% endif %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="card-footer">
      {{form(form)}}
    </div>
  </div>
</div>

{% endblock %}